<h1>Readings</h1>

<table>
  <thead>
    <tr>
    <th>Node_ID</th>
    <th>Pin</th>
    <th>Temperature</th>
    <th>Humidity</th>
    <th>Recorded at</th>
    </tr>
  </thead>

  <tbody>
    <% @readings.each do |reading| %>
      <tr>
        <td><%= reading.node_id%></td>
        <td><%= reading.pin%></td>
        <td><%= reading.temperature%></td>
        <td><%= reading.humidity%></td>
        <td><%= reading.recorded_at%></td>
        <td><%= link_to 'Show', reading %></td>
        <td><%= link_to 'Destroy', reading, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= line_chart Reading.where(:node_id => 1).pluck(:recorded_at, :temperature), xtitle: "Time", ytitle: "Temperature" %>

<div></div>
<%= line_chart Reading.where(:node_id => 1).group_by_day(:created_at) %>

<%= line_chart Reading.group(:node_id).group_by_hour(:recorded_at).count %>

<br>
