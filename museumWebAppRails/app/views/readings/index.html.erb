<h1>Readings</h1>


<h3>Specify Date Range for File</h3>

<%= form_for :reading, url: readings_path, method: :get do %>

  <%= label_tag(:start_date, "Start Date") %>
  <%= select_date Date.today, prefix: :start_date %>
  </br>
  <%= label_tag(:end_date, "End Date") %>
  <%= select_date Date.today, prefix: :end_date %>
  </br>
  <%= submit_tag("Create File") %>

<% end %>

<span>
  <a href="readings.csv">Download CSV</a>
</span>
<span>
  ***
</span>
<span>
  <a href="readings.xls">Download Excel File</a>
</span>

<table class="table table-bordered">
<h2>Readings for the given date range</h2>
  <thead>
    <tr>
    <th>Node_ID</th>
    <th>Name</th>
    <th>Temperature</th>
    <th>Humidity</th>
    <th>Recorded at</th>
    </tr>
  </thead>

  <tbody>
    <% @last_20.each do |reading| %>
      <tr>
        <td><%= reading.node_id%></td>
        <td><%= reading.name%></td>
        <td><%= reading.temperature%></td>
        <td><%= reading.humidity%></td>
        <td><%= reading.recorded_at%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

