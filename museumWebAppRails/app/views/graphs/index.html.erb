
<p id="notice"><%= notice %></p>

<script src="application.js"></script>
<div class="container">
  <div class="text-center">
    <h1>Today's Measurements</h1>
  </div>
</div>

<%= @nodeList.each do |node|%>

<graph>
<%=

  line_chart getData(node),
  title: nodeName(node),
  xtitle: "Time",
  ytitle: "Temperature/Humidity",
  legend: true,
  legend: "bottom",
  download: true,
  max: upperQuartile(node),
  min: lowerQuartile(node)
  
%>
</graph>

</br>
<hr>
</br>

<p hidden><% end %></p>

<graph>
<%=

	line_chart allTemp,
	title: "All Temperatures",
	xtitle: "Time",
	ytitle: "Temperature (F)",
	legend: true,
	legend: "bottom",
	download: true,
	max: upperQuartile(maxNode(true)),
	min: lowerQuartile(minNode(true))

%>
</graph>

<graph>
<%=

	line_chart allHum,
	title: "All Humidities",
	xtitle: "Time",
	ytitle: "Humidity (%)",
	legend: true,
	legend: "bottom",
	download: true,
	max: upperQuartile(maxNode(false)),
	min: lowerQuartile(minNode(false))

%>
</graph>